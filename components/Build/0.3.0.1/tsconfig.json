{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src", 
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}