{
  "name": "@web4x/once",
  "version": "0.1.0.0",
  "type": "module",
  "description": "ONCE - Object Network Communication Engine - Universal Web4ORB kernel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "once": "./bin/once",
    "once-cli": "./dist/ts/layer5/ONCECLI.js"
  },
  "scripts": {
