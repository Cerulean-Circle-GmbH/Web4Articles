#!/usr/bin/env bash

# Agent command - manages agent configuration
# Uses ts-node with ESM to run the TypeScript AgentManager class

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Get the project root (parent of scripts directory)
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"

# Change to project root to ensure correct module resolution
cd "$PROJECT_ROOT"

# Run the AgentManager with ts-node in ESM mode
# Pass all arguments to the TypeScript class
exec npx tsx "$PROJECT_ROOT/components/agent/AgentManager.ts" "$@"